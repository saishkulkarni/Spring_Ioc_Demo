<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
	<bean class="using_spring_xml.Mobile">
		<property name="color" value="White"></property>
		<property name="sim" ref="airtel"></property>
	</bean>

	<bean class="using_spring_xml.Jio" id="jio"></bean>
	<bean class="using_spring_xml.Airtel" id="airtel"></bean>

</beans>